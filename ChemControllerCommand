const byte RESP_OK = 0x01;
const byte RESP_ERROR = 0xFF;

const byte CMD_NOP = 0x00;
const byte CMD_READ_TADC_VAL = 0x50;
const byte CMD_READ_ADCPRESS_VAL = 0x51;

const byte CMD_READ_TEMPER = 0x20;
const byte CMD_TSTAT_ENABLE = 0x25;
const byte CMD_TSTAT_DISABLE = 0x26;
const byte CMD_TSTAT_SET_PWM = 0x27;
const byte CMD_TSTAT_SET_PID = 0x28;
const byte CMD_TSTAT_SET_TEMPER = 0x29;
const byte CMD_SET_TCOEFFS = 0x30;
const byte CMD_TSTAT_GET_PWR = 0x31;
const byte CMD_TSTAT_GET_STATE = 0x32;      //получить состояние термостата (On/Off)
const byte CMD_TSTAT_GET_SUPP_TPR = 0x33;   //получить поддерживаемую температуру


/*********** Команды Хим. реактора ***********/
const byte CMD_REAC_SET_PID = 0x3A;         //установить коэфф. ПИД
const byte CMD_REAC_SET_PRESS = 0x3B;       //установить давление шприца
const byte CMD_REAC_SET_FREQ = 0x3C;        //установить частоту вращения шаговика
const byte CMD_REAC_SET_STATE = 0x3D;       //устновить состояние реактора
const byte CMD_REAC_SET_COEFF = 0x3E;       //устновить коэфф. преобразования кода АЦП в давление
const byte CMD_REAC_CALIBR = 0x3F;          //выполнить калибровку системы

const byte CMD_REAC_GET_STATE = 0x40;       //получить состояние реактора
const byte CMD_REAC_GET_CURR_PRESS = 0x41;  //получить текущее давление шприца
const byte CMD_REAC_GET_VOL = 0x42;         //получить текущий объем шприца

const byte CMD_REAC_SYR_SET_MODE = 0x43;    //Установить режим работы шприца
const byte CMD_REAC_SYR_GET_MODE = 0x44;    //Получить режим работы шприца

const byte CMD_REAC_SET_MAX_STEPS = 0x45;   //Установить максимальное значение длины шприца
const byte CMD_REAC_GET_MAX_STEPS = 0x46;   //Получить максимальное значение длины шприца

const byte CMD_REAC_SET_PSC = 0x47;         //Установить хначение предделителя таймера шаговика
const byte CMD_REAC_GET_PSC = 0x48;         //Получить хначение предделителя таймера шаговика
const byte CMD_REAC_GET_FREQ = 0x49;        //получить код скорости шаговика
const byte CMD_REAC_GET_SUPP_PRESS = 0x4A;  //Получить поддерживаемое давление шприца
const byte CMD_REAC_GET_CALIB_FLAG = 0x4B;  //Получить статус выполнения калибровки
